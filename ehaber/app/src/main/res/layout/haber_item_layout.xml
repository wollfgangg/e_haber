<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/haber_resim_imageview"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sspor" /> <!-- Placeholder resim -->

        <TextView
            android:id="@+id/haber_baslik_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Haber Başlığı"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="4dp"
            android:maxLines="2"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/haber_icerik_ozet_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Haber içeriğinin kısa bir özeti burada görünecek..."
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="12dp"
            android:maxLines="3"
            android:ellipsize="end"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>